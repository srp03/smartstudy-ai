{
  "version": 2,
  "cleanUrls": true,
  "buildCommand": "npm install",
  "outputDirectory": "./",
  "functions": {
    "api/**/*.js": {
      "maxDuration": 120,
      "memory": 2048
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*).html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}