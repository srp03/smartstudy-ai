# Environment Variables for Vercel Deployment
# Copy this to .env.local (LOCAL ONLY - NEVER COMMIT)
# Add these same variables to Vercel dashboard under Settings > Environment Variables

# ==========================================
# Firebase Configuration (Backend)
# ==========================================
# Get these from Firebase Console > Project Settings > Service Accounts
# These are for backend/serverless functions ONLY

FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com

# ==========================================
# Firebase Configuration (Frontend)
# ==========================================
# Get these from Firebase Console > Project Settings > Web App

VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# ==========================================
# Supabase Configuration
# ==========================================
# Get these from Supabase > Settings > API Keys

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ==========================================
# Google Gemini API (Optional - disabled in hackathon build)
# ==========================================
GEMINI_API_KEY=your-gemini-api-key

# ==========================================
# Deployment Settings
# ==========================================
NODE_ENV=production
VERCEL_URL=https://your-app.vercel.app
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# Firebase Service Account (for backend only)
FIREBASE_SERVICE_ACCOUNT_PATH=./backend/service-account.json